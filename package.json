{
  "name": "force-exit-zero",
  "version": "0.1.0",
  "description": "Force a command to exit with code 0 (success), regardless of the result. Perfect for CI pipelines.",
  "type": "module",
  "bin": {
    "force-exit-zero": "dist/cli.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "scripts": {
    "test": "node --import=tsx --test test/*.ts",
    "build": "tsup",
    "prepublishOnly": "npm run build && npm test",
    "lint": "xo"
  },
  "keywords": [
    "cli",
    "bin",
    "exit-code",
    "success",
    "ci",
    "github-actions",
    "ignore-error",
    "suppress"
  ],
  "author": {
    "name": "mgks",
    "url": "https://mgks.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mgks/force-exit-zero.git"
  },
  "homepage": "https://github.com/mgks/force-exit-zero#readme",
  "bugs": {
    "url": "https://github.com/mgks/force-exit-zero/issues"
  },
  "funding": "https://github.com/sponsors/mgks",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "xo": "^0.61.1"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/filename-case": "off"
    }
  }
}